FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    git \
    curl \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements-agent.txt .
RUN pip install --no-cache-dir -r requirements-agent.txt

# Copy agent code
COPY kaggle-ml-agent/ ./agent/

# Create output directory
RUN mkdir -p /output /shared && chmod 777 /output /shared

# Create non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app /output /shared
USER appuser

# Kaggle CLI will automatically use KAGGLE_USERNAME and KAGGLE_KEY environment variables
# No need to create ~/.kaggle/kaggle.json
ENTRYPOINT ["python", "-m", "agent.main"]

